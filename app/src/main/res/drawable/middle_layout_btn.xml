<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="-90" android:endColor="@color/white" android:startColor="@color/main_gray" />
            <stroke android:width="1dp" android:color="@color/white" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="-90" android:endColor="@color/main_gray" android:startColor="@color/lighter_gray" />
        </shape>
    </item>
</selector>